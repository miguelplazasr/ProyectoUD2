{% extends 'layout.html.twig' %}

{% block body -%}
<div class="container">
    <div class="col-md-12">
        <div class="page-header margin-none">
            <h1 class="padding-none">Lista de invitados</h1>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>foto</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('ud_seguridad_invitados_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.nombres }}</td>
                        <td>{{ entity.apellidos }}</td>
                        <td><img src="{{ asset(entity.webPath) }}" width="30px" height="30px" border="0"/></td>
                        <td class="actions">
                                <a href="{{ path('ud_seguridad_invitados_show', { 'id': entity.id }) }}" class="btn btn-sm btn-info">Mostrar</a>
                                <a href="{{ path('ud_seguridad_invitados_edit', { 'id': entity.id }) }}" class="btn btn-sm btn-primary">Editar</a>
                                {{ form_start(delete_forms[entity.id]) }}
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Esta seguro de borrar este prestamo?')">Eliminar</button>
                                {{ form_end(delete_forms[entity.id]) }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
                <p>
                    <a href="{{ path('ud_seguridad_invitados_new') }}" class="btn btn-sm btn-link">
                        Nuevo Invitado
                    </a>
                </p>
                <p>
                   <a href="{{ path('ud_seguridad_invitados_find') }}" class="btn btn-sm btn-primary">
                       Buscar invitado
                   </a>
                </p>
    </div>
</div>
{% endblock %}

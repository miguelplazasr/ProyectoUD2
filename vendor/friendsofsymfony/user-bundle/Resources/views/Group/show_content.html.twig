{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_group_show">
    <div class="col-md-9">
        <div class="page-header">
            <h1>Grupo: {{ group.getName() }}</h1>
        </div>
        <br>
        <dl>
            <dt>Id</dt>
            <dd>
                {{ group.id }}
                &nbsp;
            </dd>
            <br>
            <dt>Nombre</dt>
            <dd>
                {{ group.getName() }}
                &nbsp;
            </dd>
            <br>
            <dt>Roles</dt>
            <dd>
                {% for rol in group.getRoles %}
                {{ rol }}<br>
                {% endfor %}
                &nbsp;
            </dd>
            <br>
        </dl>
    </div>
</div>

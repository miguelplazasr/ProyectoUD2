<div class="fos_user_group_list">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Id</th>
                <th>Roles</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for group in groups %}
                <tr>
                    <td><a href="{{ path('fos_user_group_show', {'groupName': group.getName()} ) }}">{{ group.getName() }}</a></td>
                    <td>{{ group.getId() }}</td>
                    <td>
                        {% for rol in group.getRoles %}
                            {{ rol }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                    <td class="actions">
                        <a href="{{ path('fos_user_group_show', {'groupName': group.getName}) }}" class="btn btn-sm btn-primary">Mostrar</a>
                        <a href="{{ path('fos_user_group_edit', {'groupName': group.getName}) }}" class="btn btn-sm btn-warning">Editar</a>
                        <a href="{{ path('fos_user_group_delete',{'groupName': group.getName}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Esta seguro de borrar este grupo?')">Eliminar</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

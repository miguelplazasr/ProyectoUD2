{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<div class="row">
    <div class="col-sm-3">
        <div class="sidebar-nav">
            <div class="navbar navbar-default yellow" role="navigation">
                <div class="navbar-header nav-yel">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <span class="visible-xs navbar-brand">Menu de administracion</span>
                </div>
                <div class="navbar-collapse collapse sidebar-navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active yellowa"><a href="#">Menu</a></li>
                        <li class="yellowli"><a href="{{ path('admin_homepage') }}">Inicio</a></li>
                        <li class="yellowli"><a href="{{ path('fos_user_profile_index') }}">Usuarios</a> </li>
                        <li class="yellowli"><a href="{{ path('fos_user_group_list') }}">Grupos</a></li>
                        <li class="yellowli"><a href="{{ path('ud_admin_dependencia') }}">Dependencias</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-9">
        <div class="row well">
            <div class="col-lg-9">
                <h1>{{ user.nombres }} {{ user.apellidos }}</h1>
                <br>
                <dl>
                    <dt>Id</dt>
                    <dd>
                        {{ user.id }}
                        &nbsp;
                    </dd>
                    <br>
                    <dt>Nombres</dt>
                    <dd>
                        {{ user.nombres }}
                        &nbsp;
                    </dd>
                    <br>
                    <dt>Apellidos</dt>
                    <dd>
                        {{ user.apellidos }}
                        &nbsp;
                    </dd>
                    <br>
                    <dt>Codigo</dt>
                    <dd>
                        {{ user.username }}
                        &nbsp;
                    </dd>
                    <br>
                    <dt>Id Carnet</dt>
                    <dd>
                        {{ user.idCarnet }}
                        &nbsp;
                    </dd>
                    <br>
                    <dt>Correo</dt>
                    <dd>
                        {{ user.email }}
                        &nbsp;
                    </dd>
                    <br>
                    <dt>Estado</dt>
                    <dd>
                        {{ user.estado }}
                        &nbsp;
                    </dd>
                    <br>
                    <dt>Contrase&ntildea</dt>
                    <dd>
                        {{ user.password }}
                        &nbsp;
                    </dd>
                    <br>
                </dl>
            </div>
            <div class="col-md-3">
                <h1>Imagen</h1>
                <p>
                    <img src="{{ asset(user.webPath) }}" width="120px" height="150px" border="0"/>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock fos_user_content %}

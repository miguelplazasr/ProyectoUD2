{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="title-login">
        <div class="header">
            <h1>BIENVENIDO</h1>
            <h2>Por favor digite su usuario y contrase&ntildea</h2>
        </div>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    </div>
<div class="container">
    <div class="row well flex">
        <div class="col-md-8>">
            <div class="ud-img">
                <img src="{{ asset('public/images/logoud_0.png') }}" alt="udftc" id="udftc"/>
            </div>
        </div>
        <div class="col-md-4">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="form-group">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>
                </div>

                <div class="form-group">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" required="required"  class="form-control"/>
                </div>

                <div class="checkbox">
                    <label for="remember_me">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Recuerdame
                    </label>
                </div>

                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-default"/>
            </form>
            <p>
                <a href="{{ path('fos_user_resetting_request') }}" class="btn btn-sm btn-link">&iquestHas olvidado tu contrase&ntildea?</a>
            </p>
        </div>
    </div>
</div>
{% endblock fos_user_content %}
